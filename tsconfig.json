{
	"ts-node": {
		"transpileOnly": true,
		"files": true
	},

	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "CommonJS",
		"target": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "server-build"
	}
}
